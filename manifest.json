{
	"manifest_version": 2,
	"name": "WaTracker",
	"description": "Tracks and stores the WhatsApp activity statuses of your friends.",
	"icons": { "128": "art/icon128.png" },
	"version": "1.0",

	"app": {
		"background": {
			"scripts": ["background.js"]
		}
	},
	"permissions": [
		"webview",
		{"fileSystem": ["write", "retainEntries", "directory"]},
		"power",
		"storage"
	],
	/*"commands": {
		"reload": {
			"suggested_key" :{
				"default": "Ctrl+R"
			},
			"description": "reload the WhatsApp"
		}
	}*/
}
